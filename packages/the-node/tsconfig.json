{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "CommonJS",
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
